(deffunction esMedio(?num)
    (if (not (isNaturalNumber ?num)) then
        (printout f "Input no válido." crlf)
        (return)
    )
    (bind ?below 0)
    (bind ?above 0)
    (loop-for-count (?i 1 (- ?num 1))
        (bind ?below (+ ?below ?i))
    )
    (bind ?j (+ ?num 1))
    (while (< ?above ?below)
        (bind ?above (+ ?above ?j))
        (bind ?j (+ ?j 1))
    )
    (printout t "below: " ?below crlf)
    (printout t "above: " ?above crlf)
    (return (= ?above ?below))
)
